{
	"type": "origins:multiple",
	"name": { "translate": "fire_fox.thfluffy2.name" },
	"description": { "translate": "fire_fox.thfluffy2.description" },
	"badges": [
		{
			"type": "origins:keybind",
			"text": "origin.thorigin.passive",
			"sprite": "minecraft:textures/block/orange_wool.png"
		},
		{
			"type": "origins:keybind",
			"sprite": "origins:textures/gui/badge/info.png",
			"text": "thfluffy2.info"
		}
	],

	"original_thfluffy_power": {
		"type": "origins:action_on_callback",
		"entity_action_added": {
			"type": "origins:and",
			"actions": [
				{
					"type": "origins:grant_power",
					"power": "*:fox/thfluffy",
					"source": "thorigins:temporal"
				},
				{
					"type": "origins:delay",
					"ticks": 1,
					"action": {
						"type": "origins:and",
						"actions": [
							{
								"type": "origins:execute_command",
								"command": "/power remove @s thorigins:fox/thfluffy_more_fire_exp_dmg"
							},
							{
								"type": "origins:execute_command",
								"command": "/power remove @s thorigins:fox/thfluffy_no_freezing"
							}
						]
					}
				}
			]
		},
		"entity_action_lost": {
			"type": "origins:revoke_power",
			"power": "*:fox/thfluffy",
			"source": "thorigins:temporal"
		}
	},

	"conditional_freeze_immunity": {
		"type": "origins:invulnerability",
		"damage_condition": {
			"type": "origins:name",
			"name": "freeze"
		},
		"condition": {
			"type": "origins:or",
			"conditions": [
				{
					"type": "origins:and",
					"conditions": [
						{
							"type": "origins:resource",
							"resource": "*:fox/thfluffy_wetness",
							"compare_to": 100,
							"comparison": "<"
