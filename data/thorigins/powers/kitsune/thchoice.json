{
	"type": "origins:multiple",
	"name": "thchoice.name",
	"description": "thchoice.description",
	"badges": [
		{
			"type": "origins:tooltip",
			"sprite": "origins:textures/gui/badge/star.png",
			"text": [
				{
					"translate": "thorigins.press0"
				},
				{
					"keybind": "key.origins.secondary_active",
					"color": "aqua"
				},
				{
					"translate": "thchoice.key"
				}
			]
		},
		{
			"type": "origins:keybind",
			"sprite": "origins:textures/gui/badge/info.png",
			"text": "kitsune.thchoice.info"
		}
	],

	"sneak_show": {
		"type": "origins:active_self",
		"cooldown": 20,
		"key": {
			"key": "key.sneak",
			"continuous": true
		},
		"entity_action": {
			"type": "origins:trigger_cooldown",
			"power": "*:*_showtime"
		}
	},

	"change_choice": {
		"type": "origins:active_self",
		"key": "key.origins.secondary_active",
		"entity_action": {
			"type": "origins:and",
			"actions": [
				{
					"type": "origins:if_else",
					"condition": {
						"type": "origins:sneaking"
					},
					"if_action": {
						"type": "origins:if_else",
						"condition": {
							"type": "origins:resource",
							"resource": "*:*_choice",
							"compare_to": 0,
							"comparison": "=="
						},
						"if_action": {
							"type": "origins:change_resource",
							"resource": "*:*_choice",
							"change": 3,
							"operation": "set"
						},
						"else_action": {
							"type": "origins:change_resource",
							"resource": "*:*_choice",
							"change": -1
						}
					},
					"else_action": {
						"type": "origins:change_resource",
						"resource": "*:*_choice",
						"change": 1
					}
				},
				{
					"type": "origins:trigger_cooldown",
					"power": "*:*_showtime"
				}
			]
		}
	},

	"showtime": {
		"type": "origins:cooldown",
		"cooldown": 30,
		"hud_render": { "should_render": false }
	},

	"choice": {
		"type": "origins:resource",
		"min": 0,
		"max": 4,
		"max_action": {
			"type": "origins:change_resource",
			"resource": "*:*_choice",
			"change": 0,
			"operation": "set"
		},
		"hud_render": { "should_render": false }
	},

	"renderer_thdash2": {
		"type": "origins:resource",
		"min": 0,
		"max": 7,
		"start_value": 1,
		"hud_render": {
			"should_render": true,
			"sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_points_01.png",
			"bar_index": 23,
			"condition": {
				"type": "origins:and",
				"conditions": [
					{
						"type": "origins:resource",
						"resource": "*:*_choice",
						"compare_to": 0,
						"comparison": "=="
					},
					{
						"type": "origins:resource",
						"resource": "*:*_showtime",
						"compare_to": 0,
						"comparison": ">"
					}
				]
			}
		}
	},

	"renderer_thphasing": {
		"type": "origins:resource",
		"min": 0,
		"max": 7,
		"start_value": 1,
		"hud_render": {
			"should_render": true,
			"sprite_location": "thorigins2:textures/thdilos_resource_bar.png",
			"bar_index": 3,
			"condition": {
				"type": "origins:and",
				"conditions": [
					{
						"type": "origins:resource",
						"resource": "*:*_choice",
						"compare_to": 1,
						"comparison": "=="
					},
					{
						"type": "origins:resource",
						"resource": "*:*_showtime",
						"compare_to": 0,
						"comparison": ">"
					}
				]
			}
		}
	},

	"renderer_thstorage2": {
		"type": "origins:resource",
		"min": 0,
		"max": 7,
		"start_value": 1,
		"hud_render": {
			"should_render": true,
			"sprite_location": "thorigins2:textures/thdilos_resource_bar.png",
			"bar_index": 1,
			"condition": {
				"type": "origins:and",
				"conditions": [
					{
						"type": "origins:resource",
						"resource": "*:*_choice",
						"compare_to": 2,
						"comparison": "=="
					},
					{
						"type": "origins:resource",
						"resource": "*:*_showtime",
						"compare_to": 0,
						"comparison": ">"
					}
				]
			}
		}
	},

	"renderer_thheal": {
		"type": "origins:resource",
		"min": 0,
		"max": 7,
		"start_value": 1,
		"hud_render": {
			"should_render": true,
			"sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_points_01.png",
			"bar_index": 13,
			"condition": {
				"type": "origins:and",
				"conditions": [
					{
						"type": "origins:resource",
						"resource": "*:*_choice",
						"compare_to": 3,
						"comparison": "=="
					},
					{
						"type": "origins:resource",
						"resource": "*:*_showtime",
						"compare_to": 0,
						"comparison": ">"
					}
				]
			}
		}
	}
}
