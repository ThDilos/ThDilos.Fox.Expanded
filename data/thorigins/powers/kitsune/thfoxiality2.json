{
	"type": "origins:multiple",
	"name": { "translate": "kitsune.thfoxiality2.name" },
	"description": { "translate": "kitsune.thfoxiality2.description" },
	"badges": [
		{
			"type": "origins:keybind",
			"text": "origin.thorigin.passive",
			"sprite": "minecraft:textures/item/glow_berries.png"
		},
		{
			"type": "origins:keybind",
			"sprite": "origins:textures/gui/badge/info.png",
			"text": "thfoxiality2.info"
		}
	],

	"original_thfoxiality_power": {
		"type": "origins:action_on_callback",
		"entity_action_added": {
			"type": "origins:and",
			"actions": [
				{
					"type": "origins:grant_power",
					"power": "*:fox/thfoxiality",
					"source": "thorigins:temporal"
				},
				{
					"type": "origins:delay",
					"ticks": 1,
					"action": {
						"type": "origins:and",
						"actions": [
							{
								"type": "origins:execute_command",
								"command": "/power remove @s thorigins:fox/thfoxiality_ticks"
							},
							{
								"type": "origins:execute_command",
								"command": "/power remove @s thorigins:fox/thfoxiality_passive_nightvision"
							},
							{
								"type": "origins:execute_command",
								"command": "/power remove @s thorigins:fox/thfoxiality_sleep_near_fear"
							},
							{
								"type": "origins:execute_command",
								"command": "/power remove @s thorigins:fox/thfoxiality_sleep_hunt"
							}
						]
					}
				}
			]
		},
		"entity_action_lost": {
			"type": "origins:revoke_power",
			"power": "*:fox/thfoxiality",
			"source": "thorigins:temporal"
		}
	},

	"ticks_20": {
		"type": "origins:action_over_time",
		"interval": 20,
		"entity_action": {
			"type": "origins:and",
			"actions": [
				{
					"type": "origins:area_of_effect",
					"shape": "cube",
					"radius": 15,
					"bientity_condition": {
						"type": "origins:target_condition",
						"condition": {
							"type": "origins:and",
							"conditions": [
								{
									"type": "origins:nbt",
									"nbt": "{\"Tags\":[\"hatting\"]}",
									"inverted": true
								},
								{
									"type": "origins:nbt",
									"nbt": "{\"Tags\":[\"sleepin\"]}",
									"inverted": true
								},
								{
									"type": "origins:nbt",
									"nbt": "{\"Tags\":[\"uuidappended\"]}",
									"inverted": true
								},
								{
									"type": "origins:entity_type",
									"entity_type": "minecraft:fox"
								}
							]
						}
					},
					"bientity_action": {
						"type": "origins:target_action",
						"action": {
							"type": "origins:and",
							"actions": [
								{
									"type": "origins:execute_command",
									"command": "/data modify entity @s Trusted append from entity @p[tag=foxie] UUID"
								},
								{
									"type": "origins:delay",
									"ticks": 1,
									"action": {
										"type": "origins:execute_command",
										"command": "/tag @s add uuidappended"
									}
								}
							]
						}
					}
				},
				{
					"type": "origins:execute_command",
					"command": "/execute as @e[type=fox,tag=uuidappended,tag=!hatting,tag=!sleepin] at @s unless entity @a[distance=..15,tag=foxie] run tag @s remove uuidappended"
				}
			]
		}
	},

	"nightvision": {
		"type": "origins:toggle_night_vision",
		"active_by_default": true,
		"strength": 1,
		"key": "nuh.uh"
	},

	"sleep_near_fear": {
		"type": "origins:prevent_sleep",
		"set_spawn_point": true,
		"message": "fox.cant_sleep_fear",
		"condition": {
			"type": "origins:and",
			"conditions": [
				{
					"type": "origins:resource",
					"resource": "*:thshy2_fear_timer",
					"compare_to": 0,
					"comparison": ">"
				},
				{
					"type": "origins:health",
					"compare_to": 6,
					"comparison": ">"
				}
			]
		}
	},

	"sleep_hunt": {
		"type": "origins:prevent_sleep",
		"set_spawn_point": true,
		"message": "fox.cant_sleep_hunt",
		"condition": {
			"type": "origins:or",
			"conditions": [
				{
					"type": "origins:resource",
					"resource": "*:kitsune/thhunt2_prepare_stage",
					"compare_to": 48,
					"comparison": "<"
				},
				{
					"type": "origins:resource",
					"resource": "*:kitsune/thhunt2_hunt_stage",
					"compare_to": 0,
					"comparison": ">"
				}
			]
		}
	}
}
