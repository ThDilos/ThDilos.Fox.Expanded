{
	"type": "origins:multiple",
	"name": { "translate": "kitsune.thphasing.name" },
	"description": { "translate": "kitsune.thphasing.description" },
	"badges": [
		{
			"type": "origins:tooltip",
			"sprite": "origins:textures/gui/badge/toggle.png",
			"text": {
				"translate": "kitsune.thphasing.key",
				"with": [
					{
						"keybind": "key.origins.primary_active",
						"color": "aqua"
					}
				]
			}
		},
		{
			"type": "origins:keybind",
			"sprite": "origins:textures/gui/badge/info.png",
			"text": "kitsune.thphasing.info"
		}
	],

	"ticks_20": {
		"type": "origins:action_over_time",
		"interval": 20,
		"entity_action": {
			"type": "origins:if_else",
			"condition": {
				"type": "origins:power_active",
				"power": "*:*_toggle"
			},
			"if_action": {
				"type": "origins:and",
				"actions": [
					{
						"type": "origins:change_resource",
						"resource": "*:thtransform_souls",
						"change": -20
					},
					{
						"type": "origins:trigger_cooldown",
						"power": "*:kitsune/thheal_soul_regen_delay"
					},
					{
						"type": "origins:set_fall_distance",
						"fall_distance": 0
					},
					{
						"type": "origins:execute_command",
						"command": "/scale delay set pehkui:motion 1 @s"
					},
					{
						"type": "origins:execute_command",
						"command": "/scale set pehkui:motion 2 @s"
					},
					{
						"type": "origins:apply_effect",
						"effect": {
							"id": "weakness",
							"amplifier": 99,
							"duration": 21,
							"is_ambient": true,
							"show_icon": false,
							"show_particles": false
						}
					}
				]
			},
			"else_action": {
				"type": "origins:execute_command",
				"command": "/scale reset pehkui:motion @s"
			}
		}
	},

	"toggle": {
		"type": "origins:toggle",
		"active_by_default": false,
		"retain_state": false,
		"key": "key.origins.primary_active",
		"condition": {
			"type": "origins:and",
			"conditions": [
				{
					"type": "origins:resource",
					"resource": "*:kitsune/thchoice_choice",
					"compare_to": 1,
					"comparison": "=="
				},
				{
					"type": "origins:resource",
					"resource": "*:thtransform_souls",
					"compare_to": 0,
					"comparison": ">"
				},
				{
					"type": "origins:resource",
					"resource": "*:fox/thfoxify_afk_timer",
					"compare_to": 1,
					"comparison": ">"
				},
				{
					"type": "origins:gamemode",
					"gamemode": "spectator",
					"inverted": true
				}
			]
		}
	},

	"phasing": {
		"type": "origins:phasing",
		"condition": {
			"type": "origins:power_active",
			"power": "*:*_toggle"
		},
		"view_distance": 20
	},

	"immunity_inwall": {
		"type": "origins:invulnerability",
		"damage_condition": {
			"type": "origins:name",
			"name": "inWall"
		},
		"condition": {
			"type": "origins:power_active",
			"power": "*:*_toggle"
		}
	},

	"screen_overlay": {
		"type": "origins:overlay",
		"red": 0.1,
		"green": 0.1,
		"blue": 0.1,
		"sprite": "origins:phantomize_overlay",
		"draw_mode": "nausea",
		"draw_phase": "below_hud",
		"condition": {
			"type": "origins:power_active",
			"power": "*:*_toggle"
		}
	},

	"transparentify": {
		"type": "origins:model_color",
		"alpha": 0.5,
		"condition": {
			"type": "origins:power_active",
			"power": "*:*_toggle"
		}
	},

	"float_initiator": {
		"type": "origins:active_self",
		"key": {
			"key": "key.jump",
			"continuous": true
		},
		"entity_action": {
			"type": "origins:trigger_cooldown",
			"power": "*:*_float_detector"
		},
		"condition": {
			"type": "origins:power_active",
			"power": "*:*_toggle"
		}
	},

	"float_detector": {
		"type": "origins:cooldown",
		"cooldown": 2
	},

	"float_on_air": {
		"type": "origins:climbing",
		"condition": {
			"type": "origins:resource",
			"resource": "*:*_float_detector",
			"compare_to": 0,
			"comparison": ">"
		}
	},

	"walk_on_air": {
		"type": "origins:modify_velocity",
		"axes": ["y"],
		"modifier": {
			"operation": "set_total",
			"amount": 0
		},
		"condition": {
			"type": "origins:and",
			"conditions": [
				{
					"type": "origins:power_active",
					"power": "*:*_toggle"
				},
				{
					"type": "origins:resource",
					"resource": "*:*_float_detector",
					"compare_to": 0,
					"comparison": "=="
				},
				{
					"type": "origins:sneaking",
					"inverted": true
				}
			]
		}
	},

	"modify_down_speed": {
		"type": "origins:modify_falling",
		"velocity": 0.02,
		"take_fall_damage": false,
		"condition": {
			"type": "origins:power_active",
			"power": "*:*_toggle"
		}
	},

	"unable_to_shoot": {
		"type": "origins:prevent_item_use",
		"item_condition": {
			"type": "origins:ingredient",
			"ingredient": [
				{
					"item": "bow"
				},
				{
					"item": "crossbow"
				},
				{
					"item": "trident"
				}
			]
		},
		"condition": {
			"type": "origins:power_active",
			"power": "*:*_toggle"
		}
	},

	"damage_reduction": {
		"type": "origins:modify_damage_taken",
		"modifier": {
			"amount": -0.5,
			"operation": "multiply_total_additive"
		},
		"condition": {
			"type": "origins:power_active",
			"power": "*:*_toggle"
		}
	}
}
