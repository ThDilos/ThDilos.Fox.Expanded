{
	"type": "origins:multiple",
	"name": { "translate": "kitsune.thphasing.name" },
	"description": { "translate": "kitsune.thphasing.description" },
	"badges": [
		{
			"type": "origins:tooltip",
			"sprite": "origins:textures/gui/badge/toggle.png",
			"text": {
				"translate": "kitsune.thphasing.key",
				"with": [
					{
						"keybind": "key.origins.primary_active",
						"color": "aqua"
					}
				]
			}
		},
		{
			"type": "origins:keybind",
			"sprite": "origins:textures/gui/badge/info.png",
			"text": "kitsune.thphasing.info"
		}
	],

	"ticks": {
		"type": "origins:action_over_time",
		"interval": 1,
		"rising_action": {
			"type": "origins:and",
			"actions": [
				{
					"type": "origins:execute_command",
					"command": "/scale delay set pehkui:motion 1 @s"
				},
				{
					"type": "origins:execute_command",
					"command": "/scale set pehkui:motion 2 @s"
				}
			]
		},
		"falling_action": {
			"type": "origins:and",
			"actions": [
				{
					"type": "origins:execute_command",
					"command": "/scale delay set pehkui:motion 1 @s"
				},
				{
					"type": "origins:execute_command",
					"command": "/scale reset pehkui:motion @s"
				}
			]
		},
		"condition": {
			"type": "origins:and",
			"conditions": [
				{
					"type": "origins:power_active",
					"power": "*:*_toggle"
				},
				{
					"type": "origins:resource",
					"resource": "*:*_heavily_armored",
					"compare_to": 0,
					"comparison": "=="
				}
			]
		}
	},

	"ticks_20": {
		"type": "origins:action_over_time",
		"interval": 20,
		"entity_action": {
			"type": "origins:and",
			"actions": [
				{
					"type": "origins:change_resource",
					"resource": "*:thtransform_souls",
					"change": -40
				},
				{
					"type": "origins:trigger_cooldown",
					"power": "*:kitsune/thheal_soul_regen_delay"
				},
				{
					"type": "origins:set_fall_distance",
					"fall_distance": 0
				},
				{
					"type": "origins:execute_command",
					"command": "/scale delay set pehkui:motion 1 @s"
				},
				{
					"type": "origins:execute_command",
					"command": "/scale set pehkui:motion 2 @s"
				},
				{
					"type": "origins:apply_effect",
					"effect": {
						"id": "weakness",
						"amplifier": 99,
						"duration": 21,
						"is_ambient": true,
						"show_icon": false,
						"show_particles": false
					}
				},
				{
					"type": "origins:if_else",
					"condition": {
						"type": "origins:any_of",
						"conditions": [
							{
								"type": "origins:equipped_item",
								"equipment_slot": "head",
								"item_condition": {
									"type": "origins:armor_value",
									"comparison": ">",
									"compare_to": 2
								}
							},
							{
								"type": "origins:equipped_item",
								"equipment_slot": "chest",
								"item_condition": {
									"type": "origins:armor_value",
									"comparison": ">",
									"compare_to": 6
								}
							},
							{
								"type": "origins:equipped_item",
								"equipment_slot": "legs",
								"item_condition": {
									"type": "origins:armor_value",
									"comparison": ">",
									"compare_to": 5
								}
							},
							{
								"type": "origins:equipped_item",
								"equipment_slot": "feet",
								"item_condition": {
									"type": "origins:armor_value",
									"comparison": ">",
									"compare_to": 2
								}
							}
						]
					},
					"if_action": {
						"type": "origins:change_resource",
						"resource": "*:*_heavily_armored",
						"change": 1,
						"operation": "set"
					},
					"else_action": {
						"type": "origins:change_resource",
						"resource": "*:*_heavily_armored",
						"change": 0,
						"operation": "set"
					}
				}
			]
		},
		"else_action": {
			"type": "origins:execute_command",
			"command": "/scale reset pehkui:motion @s"
		},
		"condition": {
			"type": "origins:power_active",
			"power": "*:*_toggle"
		}
	},

	"toggle": {
		"type": "origins:toggle",
		"active_by_default": false,
		"retain_state": false,
		"key": "key.origins.primary_active",
		"condition": {
			"type": "origins:and",
			"conditions": [
				{
					"type": "origins:resource",
					"resource": "*:kitsune/thchoice_choice",
					"compare_to": 1,
					"comparison": "=="
				},
				{
					"type": "origins:resource",
					"resource": "*:thtransform_souls",
					"compare_to": 0,
					"comparison": ">"
				},
				{
					"type": "origins:resource",
					"resource": "*:fox/thfoxify_afk_timer",
					"compare_to": 1,
					"comparison": ">"
				},
				{
					"type": "origins:gamemode",
					"gamemode": "spectator",
					"inverted": true
				}
			]
		}
	},

	"heavily_armored": {
		"type": "origins:resource",
		"min": 0,
		"max": 1
	},

	"phasing": {
		"type": "origins:phasing",
		"condition": {
			"type": "origins:all_of",
			"conditions": [
				{
					"type": "origins:equipped_item",
					"equipment_slot": "head",
