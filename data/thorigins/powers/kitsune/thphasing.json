						"type": "origins:empty"
					}
				},
				{
					"type": "origins:equipped_item",
					"equipment_slot": "chest",
					"item_condition": {
						"type": "origins:empty"
					}
				},
				{
					"type": "origins:equipped_item",
					"equipment_slot": "legs",
					"item_condition": {
						"type": "origins:empty"
					}
				},
				{
					"type": "origins:equipped_item",
					"equipment_slot": "feet",
					"item_condition": {
						"type": "origins:empty"
					}
				},
				{
					"type": "origins:power_active",
					"power": "*:*_toggle"
				}
			]
		},
		"view_distance": 20
	},

	"immunity_inwall": {
		"type": "origins:invulnerability",
