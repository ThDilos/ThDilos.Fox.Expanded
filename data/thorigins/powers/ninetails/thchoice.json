{
	"type": "origins:multiple",
	"name": { "translate": "thchoice.name" },
	"description": { "translate": "thchoice.description" },
	"badges": [
		{
			"type": "origins:tooltip",
			"sprite": "origins:textures/gui/badge/star.png",
			"text": {
				"translate": "thchoice.key",
				"with": [
					{
						"keybind": "key.origins.secondary_active",
						"color": "aqua"
					}
				]
			}
		},
		{
			"type": "origins:tooltip",
			"sprite": "origins:textures/gui/badge/info.png",
			"text": { "translate": "ninetails.thchoice.info" }
		}
	],

	"sneak_show": {
		"type": "origins:active_self",
		"cooldown": 20,
		"key": {
			"key": "key.sneak",
			"continuous": true
		},
		"entity_action": {
			"type": "origins:trigger_cooldown",
			"power": "*:*_showtime"
		}
	},

	"change_choice": {
		"type": "origins:active_self",
		"key": "key.origins.secondary_active",
		"entity_action": {
			"type": "origins:and",
			"actions": [
				{
					"type": "origins:if_else",
					"condition": {
						"type": "origins:sneaking"
					},
					"if_action": {
						"type": "origins:if_else",
						"condition": {
							"type": "origins:resource",
							"resource": "*:*_choice",
							"compare_to": 0,
							"comparison": "=="
						},
						"if_action": {
							"type": "origins:change_resource",
							"resource": "*:*_choice",
							"change": 3,
							"operation": "set"
						},
						"else_action": {
							"type": "origins:change_resource",
							"resource": "*:*_choice",
							"change": -1
						}
					},
					"else_action": {
						"type": "origins:change_resource",
						"resource": "*:*_choice",
						"change": 1
					}
				},
				{
					"type": "origins:trigger_cooldown",
					"power": "*:*_showtime"
				}
			]
		}
	},

	"showtime": {
		"type": "origins:cooldown",
		"cooldown": 30
	},

	"choice": {
		"type": "origins:resource",
		"min": 0,
		"max": 4,
		"max_action": {
			"type": "origins:change_resource",
			"resource": "*:*_choice",
			"change": 0,
			"operation": "set"
		}
	},

	"hud_bar": {
		"type": "origins:resource",
		"min": 0,
		"max": 1,
		"start_value": 1,
		"hud_render": [
			{
				"sprite_location": "thorigins2:textures/thdilos_resource_bar.png",
				"bar_index": 1,
				"condition": {
					"type": "origins:and",
					"conditions": [
						{
							"type": "origins:resource",
							"resource": "*:*_choice",
							"compare_to": 0,
							"comparison": "=="
						},
						{
							"type": "origins:resource",
							"resource": "*:*_showtime",
							"compare_to": 0,
							"comparison": ">"
						}
					]
				}
			},
			{
				"sprite_location": "thorigins2:textures/thdilos_resource_bar.png",
				"bar_index": 2,
				"condition": {
					"type": "origins:and",
					"conditions": [
						{
							"type": "origins:resource",
							"resource": "*:*_choice",
							"compare_to": 1,
							"comparison": "=="
						},
						{
							"type": "origins:resource",
							"resource": "*:*_showtime",
							"compare_to": 0,
							"comparison": ">"
						}
					]
				}
			},
			{
				"sprite_location": "thorigins2:textures/thdilos_resource_bar.png",
				"bar_index": 3,
				"condition": {
					"type": "origins:and",
					"conditions": [
						{
							"type": "origins:resource",
							"resource": "*:*_choice",
							"compare_to": 2,
							"comparison": "=="
						},
						{
							"type": "origins:resource",
							"resource": "*:*_showtime",
							"compare_to": 0,
							"comparison": ">"
						}
					]
				}
			},
			{
				"sprite_location": "thorigins2:textures/thdilos_resource_bar.png",
				"bar_index": 4,
				"condition": {
					"type": "origins:and",
					"conditions": [
						{
							"type": "origins:resource",
							"resource": "*:*_choice",
							"compare_to": 3,
							"comparison": "=="
						},
						{
							"type": "origins:resource",
							"resource": "*:*_showtime",
							"compare_to": 0,
							"comparison": ">"
						}
					]
				}
			}
		]
	}
}
