{
	"type": "origins:multiple",
	"name": "power.thorigins.kitsune/thchoice.name",
	"description": "power.thorigins.kitsune/thchoice.description",
	"badges": [
		{
			"type": "origins:tooltip",
			"sprite": "origins:textures/gui/badge/star.png",
			"text": [
				{
					"translate": "origin.thorigins.general"
				},
				{
					"keybind": "key.origins.secondary_active"
				},
				{
					"translate": "origin.thorigins.thchoice1"
				},
				{
					"keybind": "key.origins.primary_active"
				},
				{
					"translate": "origin.thorigins.thchoice2"
				}
			]
		}
	],

	"change_choice": {
		"type": "origins:active_self",
		"key": {
			"key": "key.origins.secondary_active"
		},
		"entity_action": {
			"type": "origins:and",
			"actions": [
				{
					"type": "origins:change_resource",
					"resource": "*:*_choice",
					"change": 1,
					"operation": "add"
				},
				{
					"type": "origins:change_resource",
					"resource": "*:*_showtime",
					"change": 100,
					"operation": "set"
				}
			]
		}
	},

	"showtime": {
		"type": "origins:resource",
		"max": 100,
		"min": 0,
		"hud_render": {
			"should_render": false
		}
	},

	"showtime_elapse": {
		"type": "origins:action_over_time",
		"interval": 1,
		"entity_action": {
			"type": "origins:if_else",
			"condition": {
				"type": "origins:resource",
				"resource": "*:*_showtime",
				"compare_to": 0,
				"comparison": ">"
			},
			"if_action": {
				"type": "origins:change_resource",
				"resource": "*:*_showtime",
				"change": -1,
				"operation": "add"
			}
		}
	},

	"choice": {
		"type": "origins:resource",
		"min": 0,
		"max": 4,
		"max_action": {
			"type": "origins:change_resource",
			"resource": "*:*_choice",
			"change": 0,
			"operation": "set"
		},
		"hud_render": {
			"should_render": false
		}
	},

	"renderer_thdash3": {
		"type": "origins:resource",
		"min": 0,
		"max": 7,
		"start_value": 1,
		"hud_render": {
			"should_render": true,
			"sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_points_01.png",
			"bar_index": 23,
			"condition": {
				"type": "origins:and",
				"conditions": [
					{
						"type": "origins:resource",
						"resource": "*:*_choice",
						"compare_to": 0,
						"comparison": "=="
					},
					{
						"type": "origins:resource",
						"resource": "*:*_showtime",
						"compare_to": 0,
						"comparison": ">"
					}
				]
			}
		}
	},

	"renderer_thsoul_power": {
